@model User

<h2>Create User</h2>

<form asp-action="Create" class="user-form">
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Age">Age</label>
        <input asp-for="Age" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label for="AddressCountry">Country</label>
        <input asp-for="AddressCountry" class="form-control" />
    </div>

    <div class="form-group">
        <label for="AddressCity">City</label>
        <input asp-for="AddressCity" class="form-control" />
    </div>

    <div class="form-group">
        <label for="AddressStreetName">Street</label>
        <input asp-for="AddressStreetName" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
